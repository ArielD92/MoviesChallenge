<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/nowPlayingMoviesFragment">

  <fragment
      android:id="@+id/nowPlayingMoviesFragment"
      android:name="com.arieldywelski.movieschallenge.view.NowPlayingMoviesFragment"
      android:label="fragment_now_playing_movies"
      tools:layout="@layout/fragment_now_playing_movies" >
    <action
        android:id="@+id/actionToMovieDetails"
        app:destination="@id/movieDetailsFragment" />
  </fragment>
  <fragment
      android:name="com.arieldywelski.movieschallenge.view.MovieDetailsFragment"
      android:id="@+id/movieDetailsFragment"
      android:label="Movie Details"
      tools:layout="@layout/fragment_movie_details" >
    <argument android:name="movie" />
  </fragment>
</navigation>